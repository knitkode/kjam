{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "../next/**/*.spec.ts",
    "../core/**/*.spec.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../next/**/*.ts",
    "../core/**/*.ts",
    "ide-callback-polyfill.js"
  ]
}
